pipeline {
    agent any

    stages {
        stage('Checkout') {
        steps {
            checkout scm
            script {          
                git branch: 'Main', credentialsId: 'Git', url: 'https://github.com/YogeshBaldha/ColudboostTest-Jenkins.git'
                }
            }
        }          
        stage('Build') {
            steps {                
                sh "${env.TERRAFORM_HOME}/terraform init"
                sh "${env.TERRAFORM_HOME}/terraform plan -out=tfplan"          
            }
        }               
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
